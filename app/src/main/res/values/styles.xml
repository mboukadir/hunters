<resources>

  <style name="None"/>

  <!-- Text styles -->
  <style name="TextAppearance.Hunters" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textColorHighlight">?android:attr/colorControlHighlight</item>
    <item name="android:textColorHint">?android:textColorSecondary</item>
    <item name="android:textColorLink">?android:textColorLink</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">monospace</item>
  </style>

  <style name="TextAppearance.Hunters.Toolbar"/>

  <style name="TextAppearance.Hunters.Toolbar.Title">
    <item name="android:textColor">?attr/colorAccent</item>
    <!--<ititlename="android:letterSpacing">0.20</item>-->
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">22sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/nosifer</item>
  </style>

  <style name="TextAppearance.Hunters.ListItem">
    <item name="android:ellipsize">end</item>
  </style>

  <style name="TextAppearance.Hunters.ListItem.Title">
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">@dimen/font_size_large</item>
    <item name="android:singleLine">true</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.Hunters.ListItem.SubTitle">
    <item name="android:maxLines">2</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textSize">@dimen/font_size_medium</item>
  </style>

  <style name="TextAppearance.Hunters.ListItem.Action">
    <item name="android:textSize">@dimen/font_size_medium</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?android:attr/colorAccent</item>
  </style>


  <!--Widget styles-->
  <style name="Widget.Hunters.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
    <item name="titleTextStyle">@style/TextAppearance.Hunters.Toolbar.Title</item>
  </style>

  <style name="Widget.Hunters.Toolbar" parent="Widget.AppCompat.Toolbar">
    <item name="titleTextAppearance">@style/TextAppearance.Hunters.Toolbar.Title</item>
    <item name="contentInsetStart">12dp</item>

  </style>


  <style name="Widget.Hunters.BottomNav" parent="Widget.Design.BottomNavigationView">
    <item name="android:background">@color/primary</item>
    <item name="android:elevation">6dp</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    <item name="itemIconTint">@color/bottom_nav_item_colors</item>
    <item name="itemTextColor">@color/bottom_nav_item_colors</item>
  </style>

</resources>
