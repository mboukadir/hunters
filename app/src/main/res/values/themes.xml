<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Hunters.Immersive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/immersive_sys_ui</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
    </style>

    <style name="Theme.Hunters" parent="Base.Theme.Hunters" />

    <!-- Base application theme. -->
    <style name="Base.Theme.Hunters" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:colorBackground">@color/porcelain</item>
        <item name="android:textColorPrimary">@color/falcon</item>
        <item name="android:textColorSecondary">@color/stratus</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlHighlight">@color/secondaryLightColor</item>

        <item name="android:fontFamily">monospace</item>

        <item name="actionBarTheme">@style/ThemeOverlay.Hunters.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Hunters.Popup</item>

    </style>

    <style name="ThemeOverlay.Hunters.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="ThemeOverlay.Hunters.Popup" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.Hunters.Home">
        <item name="toolbarStyle">@style/Widget.Hunters.Toolbar</item>
    </style>

</resources>